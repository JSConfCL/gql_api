{
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.json",
    "src/**/*",
    "./.*.cjs",
    "./*.json",
    "generated",
    "emails/**/*",
    "workers/**/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "jsx": "react",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noEmit": true,
    "incremental": true,
    "types": ["@cloudflare/workers-types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~workers/*": ["./workers/*"]
    }
  }
}
