{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@cloudflare/workers-types"],
    "typeRoots": ["node_modules/@types", "src/@types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
